# Model Provider Configuration
# Set MODEL_PROVIDER to explicitly choose which provider to use
# Options: "google-vertex", "anthropic", or "openai"
# If not set, the system will auto-detect based on available credentials

MODEL_PROVIDER=openai

# =============================================================================
# Provider-Specific Configuration
# =============================================================================
# Configure ONLY the provider selected in MODEL_PROVIDER above

# -----------------------------------------------------------------------------
# Google Vertex AI (MODEL_PROVIDER=google-vertex)
# -----------------------------------------------------------------------------
# GOOGLE_CLOUD_PROJECT=your-project-id
# GOOGLE_CLOUD_LOCATION=europe-west1
# MODEL_NAME=gemini-2.5-flash

# -----------------------------------------------------------------------------
# Anthropic (MODEL_PROVIDER=anthropic)
# -----------------------------------------------------------------------------
# ANTHROPIC_API_KEY=your-anthropic-api-key
# MODEL_NAME=claude-sonnet-4-5

# -----------------------------------------------------------------------------
# OpenAI (MODEL_PROVIDER=openai)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=your-openai-api-key
MODEL_NAME=gpt-4o

# =============================================================================
# Banked OAuth Configuration (Required)
# =============================================================================
BANKED_OAUTH_CLIENT_ID=your-client-id
BANKED_OAUTH_CLIENT_SECRET=your-client-secret
BANKED_OAUTH_CLIENT_SCOPE=
BANKED_OAUTH_URL=https://api.banked.com/oauth/token

# =============================================================================
# Banked MCP Configuration
# =============================================================================
BANKED_MCP_URL=https://mcp.banked.com
BANKED_ALLOWED_TOOLS=
